pipeline {
  agent { label 'linux' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t quintoramersfoort/fission-java:v11-slim-1.1 .'
      }
    }
   stage('Scan') {
            steps {
                // Install trivy
                sh 'curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b /usr/local/bin v0.18.3'
                sh 'curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/html.tpl > html.tpl'

                // Scan all vuln levels
                sh 'mkdir -p reports'
                sh 'trivy image --ignore-unfixed --format template --template "@./html.tpl.1" -o reports/report1.html quintoramersfoort/fission-java:v11-slim-1.1'
                publishXML target : [
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'reports',
                    reportFiles: 'report1.html',
                    reportName: 'Trivy Scan',
                    reportTitles: 'Trivy Scan'
                ]

               

            }
    }
  }
}
